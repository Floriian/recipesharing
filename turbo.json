{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "apps/api/dist/**",
                "apps/web/dist/**",
                "libs/types/dist/**"
            ]
        }
    }
}